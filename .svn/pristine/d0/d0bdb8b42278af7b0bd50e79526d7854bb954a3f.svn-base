<script>
    getSearchRankList();//大家都在搜
    getBoyFavoriteList();//男生喜欢
    getGirlFavoriteList();//女生喜欢


    //大家都在搜
    function getSearchRankList() {
        var params = '["{pageSize:3,more:false}"]';
        myHttp({
            url: urls.getSearchRankList.path,
            params: params,
            success: function (res) {
                var imgshtml = '';
                if (res.statusCode == 200) {
                    for(var i in res.data){
                        var record = res.data[i];
                        var contenthtml = '<div class="box">' +
                            '                <a href="book_details.html?id='+record['id']+'">' +
                            '                    <div class="img">' +
                            '                        <img src="'+record['coverUrl']+'">' +
                            '                    </div>' +
                            '                    <div class="details">' +
                            '                        <div class="name">' +
                            '                            <p>'+record['name']+'</p>';
                        if(record['serialState']=='已完结'){
                            contenthtml+='<span class="over" >已完结</span>';
                        }else{
                            contenthtml+='<span>连载中</span>';
                        }
                        contenthtml+='               </div>' +
                            '                        <div class="show">' +
                            '                            <span>'+record['authorPenName']+'</span><span>'+record['categoryName']+'</span>' +
                            '                            <span>'+record['formatWordCount']+'</span><span>'+record['formatClickCount']+'点击</span>' +
                            '                        </div>' +
                            '                        <div class="text">' +
                            '                            <p>'+record['summary']+'</p>' +
                            '                        </div>' +
                            '                   </div>' +
                            '                </a>' +
                            '            </div>';
                        $('.free-box').append(contenthtml);
                    }


                } else {
                    myAlert(res.statusMsg);
                }
            }
        });
    }


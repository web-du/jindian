    if(accessToken){
        //getUserInfo();
    }else{
        toLogin();
    }

    //获取用户资料
    function getUserInfo(){
        var params = '["{}"]';
        myHttp({
            url: urls.getUserInfo.path,
            headers:{'jd-token':accessToken},
            params: params,
            success: function (res) {
                if (res.statusCode == 200) {
                    var record = res.data;
                    $('#image').attr('src',record['iconUrl']);




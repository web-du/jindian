    $(function () {
        /**搜索效果**/
        $(".myheader img.book-search").click(function () {
//            $(".myheader .book-Tosearch").css("display", "block").css("display", "flex");
//            $(".off").click(function () {
//                $(".myheader .book-Tosearch").css("display", "none")
//            })
            locationUrl('search_page.html?isFirstPage=1',true);
        })


        /**设置选项**/
        $(".myheader img.set").click(function () {
            $(".myheader .book-set").fadeToggle();
        })
        $(".myheader .book-set ul li").click(function () {
            var index = $(this).index();
            $(".myheader .book-set").css("display", "none");

            /**模式切换**/
            if (index == 2) {
                $(".bookshelf-box").toggleClass("bookshelf-box1");
                if ($(this).find("p").html() == "列表模式") {
                    $(this).find("p").html("图墙模式")
                } else {
                    $(this).find("p").html("列表模式")
                }
            }
        })

        /**switch开关**/
        $(".op >.box>.mui-switch").click(function () {
            $(this).toggleClass("mui-active");
        })


        /**弹出形式**/
        $(".bookshelf-box img.set").click(function () {
            $(".loog-tap").toggleClass("on")
        })
        $(".loog-tap").click(function () {
            $(this).toggleClass("on")
        })
        $(".loog-tap>.box").click(function (e) {
            var e = e || event;
            e.stopPropagation();
            $(this).css("display", "block")
        })
    })


</script>
<script>


    var orderBy = 1;
    if(accessToken){
        var params = '["{}"]';
        getBookShelfIndex(params);
    }else{
        $('.loading').hide();
        //NATIVE.toLogin();
    }

    //获取书架书籍
    function getBookShelfIndex(params) {
        $('.loading').show();        myHttp({
            url: urls.getBookShelfIndex.path,
            //headers:{'jd-token':accessToken,'Accept':'application/json, text/javascript'},
            headers:{'jd-token':accessToken},
            params: params,
            success: function (res) { $('.loading').hide();
                var imgshtml = '';
                if (res.statusCode == 200) {
                    $('.bookshelf-box').html('');
                    for(var i in res.data.collectList){
                        var record = res.data.collectList[i];
                        var contenthtml = '<div class="box"> ' +
                            '            <div class="img"> ' +
                            '                <a href="javascript:locationUrl(\'book_page.html?isFirstPage=1&id='+record['bookId']+'\',true);"> ' +
                            '                    <img src="'+record['coverUrl']+'"> '+
                            '                </a> '+ '<div class="mui-input-row mui-checkbox">'+'<input value="'+record['collectId']+'" name="checkbox" type="checkbox" ></div>' ;
                        if(record['hasUpdate']){
                        	contenthtml+='       <i></i> ' ;
						}
                        contenthtml+='    </div> ' +
                            '            <div class="text"> ' +
                            '                <h2>'+record['name']+'</h2> ';
                        if(record['readPercent']){
                            contenthtml+='    <span>已读'+record['readPercent']+'%</span> ';
                        }else{
                            contenthtml+='    <span>未读</span> ';
                        }
                        contenthtml+='   </div> ' +
                            '        </div>';
                        $('.bookshelf-box').append(contenthtml);
                    }
                    var temphtml = '<div class="box" onclick="NATIVE.toIndex2()"> ' +
                        '            <img src="../images/bookshelf-add.jpg"> ' +
                        '            <h2>添加书籍</h2> ' +
                        '        </div>';
                    $('.bookshelf-box').append(temphtml);

                    if(orderBy==1){
                        orderBy =-1;
                    }else{
                        orderBy = 1;
                    }

                    /**长按弹窗**/
                    mui.init({
                        swipeBack: true, //启用右滑关闭功能
                        gestureConfig:{
                           tap: true, //默认为true
                           doubletap: true, //默认为false
                           longtap: true, //默认为false
                           swipe: true, //默认为true
                           drag: true, //默认为true
                           hold:false,//默认为false，不监听
                           release:false//默认为false，不监听
                          }
                    });
                    /**长按弹窗**/
                    mui(".box>.img").on("longtap","img",function(){
                        showdelbutton();
                    })
                    $(".bookshelf-box .img .mui-checkbox input").on("change",function(){
                        var ids = new Array();
                        $(".bookshelf-box .img .mui-checkbox input").each(function(e){
                            if($(this).is(':checked')){
                                ids.push($(this).val());
                            }
                        });
                        $('#del').text(ids.length);
                    })

                    /**点击取消**/
                    $(".cancle").click(function(){
                        $(".new-op").hide();
                        $(".batch-del").hide();
                        $(".bookshelf-box .img .mui-checkbox").hide();
                    })

                } else if(res.statusCode == 110003) {
                    NATIVE.toLogin();
                }
            }
        });
    }

    function showdelbutton(){
        $(".bookshelf-box .img .mui-checkbox").show();
        $(".new-op").show().css("display","flex");
        $(".batch-del").show().css("display","flex");
        //document.getElementsByClassName("loog-tap")[0].classList.add("on");
        $("[name='checkbox']").removeAttr("checked");//取消全选
        $('#del').text(0);
    }

    function delbook(){
        var str = '';
        $(".bookshelf-box .img .mui-checkbox input").each(function(e){
            if($(this).is(':checked')){
                str += (str ? ',' : '') + $(this).val();
            }
        });

        if (str) {
            var params = '["{collectId:['+str+']}"]';
            $('.loading').show();
            myHttp({
                url: urls.deleteFavorite.path,
                headers: {'jd-token': accessToken},
                params: params,
                success: function (res) { $('.loading').hide();
                    if (res.statusCode == 200) {
                        $(".bookshelf-box .img .mui-checkbox input").each(function(e){
                            if($(this).is(':checked')){
                                $(this).parent().parent().parent().remove();
                            }
                        });
                        $(".new-op").hide();
                        $(".batch-del").hide();
                        $(".bookshelf-box .img .mui-checkbox").hide();


                    } else if (res.statusCode == 110003) {
                        NATIVE.toLogin();
                    }
                }
            });
        }
    }

    function selectAll(){
        $("[name='checkbox']").attr("checked",'true');//全选
        $('#del').text($("[name='checkbox']").length);
    }


    function orderByBookShelf(){
        var params = '["{orderByUpdate:'+orderBy+'}"]';
        getBookShelfIndex(params);
    }


    function checkToken(){
        if(accessToken){
            locationUrl('sign_in.html',false);
        }else{
            NATIVE.toLogin();
        }
    }



</script>

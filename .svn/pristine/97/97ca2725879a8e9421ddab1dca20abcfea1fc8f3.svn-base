                return false;
			}

            var params = '["{giftId:'+giftId+',giftNum:'+giftNum+',bookId:'+id+'}"]';
            $('.loading').show();        myHttp({
                url: urls.addRewardGift.path,
                params: params,
                headers:{'jd-token':accessToken},
                success: function (res) { $('.loading').hide();
                    if(res.statusCode==200){

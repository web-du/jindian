				$(".book-content .text p").html(newtext);
				$(".book-content .text span").css("display","block");


				/**点击展开**/
				$(".book-content .text span").click(function(){
					if($(this).html() == "展开"){
						$(".book-content .text p").html(oldtext);
						$(this).html("收起");
					}else{
						$(".book-content .text p").html(newtext);
						$(this).html("展开");
					}


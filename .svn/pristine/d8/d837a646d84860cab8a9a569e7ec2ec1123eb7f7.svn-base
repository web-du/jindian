    <script type="text/javascript">
        /**根据屏幕改变根元素字体大小**/
        document.documentElement.style.fontSize = document.documentElement.clientWidth / 7.5 + 'px';
            mui.init({
                swipeBack: true, //启用右滑关闭功能
                gestureConfig:{
                   tap: true, //默认为true
                   doubletap: true, //默认为false
                   longtap: true, //默认为false
                   swipe: true, //默认为true
                   drag: true, //默认为true
                   hold:false,//默认为false，不监听
                   release:false//默认为false，不监听
                  }
            });


        $(function(){
            var checkBoxl = $(".bookshelf-box .box").length;
            var num = 0;
            // 单个点击选中按钮
            $(".bookshelf-box .box").each(function(){
                $(this).find("input").click(function(){
                    var checkBoxl = $(".bookshelf-box .box").length;
                    Ischeck();
                })
            })


            // 点击全选
            $(".all").click(function(){
                var checkBoxl = $(".bookshelf-box .box").length;
                for(var i = 0 ; i<checkBoxl; i++){
                    $(".bookshelf-box .box").eq(i).find("input").prop("checked","true");
                }
                Ischeck();
            })


            // 判断是否选中
            function Ischeck(){
                num = 0;
                for(var i = 0 ; i<checkBoxl; i++){
                    if($(".bookshelf-box .box").eq(i).find("input").is(":checked")){
                        num++;
                    }
                }
                $("#del").html(num)
            }

            // 点击删除所选
            $(".batch-del").click(function(){
                var checkBoxl = $(".bookshelf-box .box").length;
                // for(var i = 0 ; i<checkBoxl; i++){
                //     if($(".bookshelf-box .box").eq(i).find("input").is(":checked")){
                //         $(".bookshelf-box .box").eq(i).remove();
                //     }
                // }
                $(".bookshelf-box .box").each(function(){
                    if($(this).find("input").is(":checked")){
                        $(this).remove()
                    }
                })
                Ischeck();
            })
        })


    </script>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>今点分类</title>
    <script src="../js/mui.js"></script>
    <script src="../js/jquery-1.8.3.min.js"></script>
	<script src="../js/config.js"></script>
    <link href="../css/mui.min.css" rel="stylesheet"/>
    <link rel="stylesheet" type="text/css" href="../css/ui-box.css"/>
    <link rel="stylesheet" type="text/css" href="../css/swiper-4.2.2.min.css"/>
    <link rel="stylesheet" type="text/css" href="../css/base.css"/>
    <link rel="stylesheet" type="text/css" href="../css/style.css"/>
    <style>
    	.mui-bar{
    		background-color: #e15149;
    	}
    	.mui-bar-nav.mui-bar .mui-icon{
    		color: #FFFFFF;
    	}
    	.mui-title{
    		color: #FFFFFF;
    	}
    	.mui-bar .mui-btn-link{
    		color: #FFFFFF;
    	}
    	.mui-bar .mui-btn-link a{
    		color: #fff;
    	}
    	.mui-segmented-control .mui-control-item{
    		width: 100%;
    	}
    	.mui-row.mui-fullscreen>[class*="mui-col-"] {
			height: 100%;
		}
		.mui-col-xs-3,
		.mui-control-content {
			overflow-y: auto;
			height: 100%;
		}
		.mui-segmented-control .mui-control-item {
			line-height: 50px;
			width: 100%;
		}
		.mui-segmented-control.mui-segmented-control-inverted .mui-control-item.mui-active {
			background-color: #fff;
		}
        .mui-content{
            padding-top:0.8rem;
        }
    </style>
    <script type="text/javascript" charset="utf-8">
      	mui.init();
    </script>
</head>
<body>
    <div class="myheader">
        <a class="Goback" href="javascript:window.history.back();">
            <img src="../images/Goback.png"/>
        </a>
        <h2 class="title">分类</h2>
        <span class="new-all"><a href="index_class_details.html" data-ajax="false">全部</a></span>
    </div>
	<div class="mui-content mui-row mui-fullscreen index-class">
		<div class="mui-col-xs-3">
			<div id="segmentedControls" class="mui-segmented-control mui-segmented-control-inverted mui-segmented-control-vertical">
				<a class="mui-control-item mui-active" href="#content1">男生</a>
				<a class="mui-control-item" href="#content2">女生</a>
			</div>
		</div>
		<div id="segmentedControlContents" class="mui-col-xs-9" >
			<div id="content1" class="mui-control-content mui-active">
				<ul class="mui-table-view" id="sexman">

				</ul>
			</div>
			<div id="content2" class="mui-control-content">
				<ul class="mui-table-view" id="sexnv">

				</ul>
			</div>
		</div>
	</div>

	<script type="text/javascript" src="../js/swiper-4.2.2.min.js"></script>
	<script type="text/javascript">
		/**根据屏幕改变根元素字体大小**/
		document.documentElement.style.fontSize = document.documentElement.clientWidth / 7.5 + 'px';
			mui.init({
				swipeBack: true //启用右滑关闭功能
			});
			var controls = document.getElementById("segmentedControls");
			var contents = document.getElementById("segmentedControlContents");
			var html = [];
			var Tabber = ["男生","女生"];
			var i = 1,
				j = 1,
				m = 3, //左侧选项卡数量+1
				n = 15; //每个选项卡列表数量+1
			for (; i < m; i++) {
				html.push('<a class="mui-control-item" href="#content' + i + '">' +Tabber[i-1]+ '</a>');
			}
			controls.innerHTML = html.join('');
			html = [];

			 //默认选中第一个
			controls.querySelector('.mui-control-item').classList.add('mui-active');
			contents.querySelector('.mui-control-content').classList.add('mui-active');
		/*
		var sex = '男频';
		var arr = {
			'pageNumber':1,
			'pageSize':5,
		};
		var params = JSON.stringify(array);
		var array = [];
		array['pageNumber'] = 1;
		array['pageSize'] = 5;
		var params = JSON.stringify( arr );
		*/

		//男
		var params = '["{pageNumber:1,channel: \'男频\',pageSize:20}"]';
		myHttp({
		  url: urls.getSearchList.path,
		  params: params,
		  success: function (res) {
			 if(res.statusCode==200){
				var str='';
				for(var i=0;i<res.data.length;i++){
					str+='<li class="mui-table-view-cell">'+
'						<a href="index_class1.html?categoryId='+res.data[i].categoryId+'&type=0" data-ajax="false">'+
'						<div class="box">'+
'							<img src="'+res.data[i].coverUrl+'"/>'+
'							<div class="name">'+
'								<h2>'+res.data[i].categoryName+'</h2>'+
'							</div>'+
'						</div>'+
'						</a>'+
'					</li>';
				}

				$("#sexman").html('');
				$("#sexman").html(str);
			 }
		  },
		  error: function (res) {
			//console.log(res);
		  }
		});

		//女
		/*
		var params = [];
		var temp = {
                'wordCount':100,
				'channel':'男频',
				'pageSize':2,
              };
        params.push(temp);
		*/
		var params = '["{pageNumber:1,channel: \'女频\',pageSize:20}"]';
		myHttp({
		  url: urls.getSearchList.path,
		  params: params,
		  success: function (res) {
			 if(res.statusCode==200){
				var str='';
				for(var i=0;i<res.data.length;i++){
					str+='<li class="mui-table-view-cell">'+
'						<a href="index_class1.html?categoryId='+res.data[i].categoryId+'&type=1" data-ajax="false">'+
'						<div class="box">'+
'							<img src="'+res.data[i].coverUrl+'"/>'+
'							<div class="name">'+
'								<h2>'+res.data[i].categoryName+'</h2>'+
'							</div>'+
'						</div>'+
'						</a>'+
'					</li>';
				}

				$("#sexnv").html('');
				$("#sexnv").html(str);
			 }
		  },
		  error: function (res) {
			//console.log(res);
		  }
		});
	</script>
<script>
    var winurl = window.location.href;
    var isFirstPage = getQueryString(winurl,'isFirstPage');
    if(isFirstPage == 1){
        $('.Goback').attr('href','javascript:void(0);');
        $('.Goback').click(function(){
            closeWinView();
        });
    }


</script>
</body>
</html>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>手机号登录</title>
    <link rel="stylesheet" type="text/css" href="../css/ui-box.css"/>
    <link rel="stylesheet" type="text/css" href="../css/base.css"/>
    <link rel="stylesheet" type="text/css" href="../css/style.css"/>
    <style>
    	.mui-bar{
    		background-color: #e15149;
    		height: 0.8rem;
    	}
    	.mui-bar-nav.mui-bar .mui-icon{
    		color: #FFFFFF;
    	}
    	.mui-title{
    		color: #FFFFFF;
    	}
    	.mui-bar .mui-btn-link{
    		color: #FFFFFF;
    	}
    	.mui-bar .mui-btn-link a{
    		color: #fff;
    	}
        .register-page .box input.bind-yzm{
            position:absolute;
            width:2.2rem;
            height: 0.7rem;
            line-height:0.7rem;
            text-align:center;
            padding: 0;
            right:0.2rem;
            top:0.05rem;
            background-color:#e15149;
            color:#fff;
            border:none;
            font-size:0.26rem;
        }
    </style>
<script type="text/javascript">document.documentElement.style.fontSize = document.documentElement.clientWidth / 7.5 + 'px';</script></head>
<body>
	<div class="myheader">
        <a class="Goback" href="javascript:window.history.back();" >
            <img src="../images/Goback.png"/>
        </a>
        <h2 class="title">手机号登录</h2>
    </div>
	<div class="content">
		<div class="register-page">
			<div class="box">
				<form>
					<p>
						<input type="text" placeholder="输入手机号"/>
					</p>
					<p>
						<input type="text" placeholder="输入验证码"/>
						<input class="bind-yzm" value="获取验证码" readonly="readonly">
					</p>
					<button class="Toreg">立即登录</button>
				</form>
			</div>
		</div>
	</div>

	<!--注册报错-->
	<div class="fix-psd-error">
		<div class="box">
			<h2>注册提醒</h2>
			<p>两次密码输入不一致，请重新输入</p>
			<div class="Toregister">
				<button>取消</button>
				<a href="#">重新输入</a>
			</div>
		</div>
	</div>
	<script type="text/javascript" src="../js/jquery-1.8.3.min.js"></script>
    <script type="text/javascript" src="../js/layer.js"></script>
	<script type="text/javascript">
		/**根据屏幕改变根元素字体大小**/
		document.documentElement.style.fontSize = document.documentElement.clientWidth / 7.5 + 'px';
        //倒计时
        var wait = 60;
        $(".bind-yzm").click(function(){
            time();
            layer.msg('验证码已发送');
        })
        function time(){
            if (wait == 0){
                $(".bind-yzm").removeAttr("disabled");
                $(".bind-yzm").val("获取验证码");
                wait = 60;
                clearInterval(timer);
                timer = null;
            }else{
                $(".bind-yzm").attr("disabled", true);
                $(".bind-yzm").val("(" + wait + ")s后重新获取");
                wait--;
                var timer = setTimeout(function(){time()},1000)
            }
        }
	</script>
</body>
</html>
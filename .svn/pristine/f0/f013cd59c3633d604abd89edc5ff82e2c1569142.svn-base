<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no"/>
    <title>会员中心</title>
    <link rel="stylesheet" type="text/css" href="../css/ui-box.css"/>
    <link rel="stylesheet" type="text/css" href="../css/base.css"/>
    <link rel="stylesheet" type="text/css" href="../css/style.css"/>
    <style>
        .ui-page {
            background-color: #f0f0f0;
        }
        #score{
            margin-right:0;
            padding-right:0.1rem;
        }
        #level{
            padding-right:0.1rem;
            margin-right:0.1rem;
            margin-left:0.1rem;
        }
        .myheader-bg .member-img p span{
            padding-right:0;
        }
    </style>
</head>
<body>
<div date-role="page">
    <div class="myheader">
        <a class="Goback" href="javascript:NATIVE.closeWinView();"  data-ajax="false">
            <img src="../images/Goback.png"/>
        </a>
        <h2 class="title">会员中心</h2>
        <a href="javascript:locationUrl('user_help.html',false);" class="account-mess">
            <img src="../images/installl-ques.png"/>
        </a>
    </div>
    <div class="myheader-bg">
        <div class="member-img">
            <img id="headerUrl" src="../images/account-img03.png" onerror="this.onerror='';src='../images/account-img03.png'"/>
            <div class="box">
                <h2 id="nickname">未登录</h2>
                <p><span>LV<span id="level">0</span></span><span><span id="score">0</span>积分</span></p>
            </div>
        </div>
        <button><a href="javascript:locationUrl('task.html',false);">赚积分</a></button>
    </div>
    <div class="member-page">
        <div class="my-grade">
            <div class="integral">
                <h2>我的等级</h2>
                <p>还差<span id="nextLevelScore"></span>积分到达LV<span id="level3">1</span></p>
            </div>
            <div class="progress">
                <em style="width: 50%;"></em>
            </div>
            <div class="real">
                <span>LV<span id="level1">0</span></span>
                <span>LV<span id="level2">1</span></span>
            </div>
        </div>
        <div class="privilege">
            <div class="box">
                <img src="../images/member-img01.png"/>
                <div class="title">
                    <h2>充值特权</h2>
                    <p id="chargeNote">无</p>
                </div>
            </div>
            <div class="box">
                <img src="../images/member-img02.png"/>
                <div class="title">
                    <h2>订阅特权</h2>
                    <p id="subNote">无</p>
                </div>
            </div>
            <div class="box">
                <img src="../images/member-img04.png"/>
                <div class="title">
                    <h2>签到特权</h2>
                    <p id="signNote">无</p>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="../js/jquery-1.8.3.min.js"></script>
<script type="text/javascript" src="../js/public.js"></script>
<script src="../js/config.js"></script>
<script>



    if (accessToken) {
        getMembershipInfo();
    } else {
        NATIVE.toLogin();
    }


    function getMembershipInfo(){
        var params = '["{}"]';
        $('.loading').show();        myHttp({
            url: urls.getMembershipInfo.path,
            headers:{'jd-token':accessToken},
            params: params,
            success: function (res) { $('.loading').hide();
                if (res.statusCode == 200) {
                    if(res.data){
                        var record = res.data;
                        $('#headerUrl').attr('src',record['headerUrl']);
                        $('#nickname').text(record['nickname']);
                        $('#level').text(record['level']);
                        $('#level1').text(record['level']);
                        $('#level2').text(record['nextLevel']);
                        $('#level3').text(record['nextLevel']);
                        $('#level3').text(record['nextLevel']);
                        $('#score').text(record['score']);
                        $('#nextLevelScore').text(record['nextLevelScore']);
                        if(record['signNote']){
                            $('#signNote').text(record['signNote']);
                        }
                        if(record['chargeNote']){
                            $('#signNote').text(record['chargeNote']);
                        }
                        if(record['subNote']){
                            $('#signNote').text(record['subNote']);
                        }

                        var aa = parseInt(parseInt(record['score'])/parseInt(record['nextLevelScore'])*100);
                        $('.progress em').css('width',aa+'%');

                    }
                } else if(res.statusCode == 110003) {
                    NATIVE.toLogin();
                }
            }
        });
    }



</script>
</body>
</html>
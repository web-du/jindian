    //获取百分比章节
    function getChapterContentByPercent(percent){
        var params = '["{bookId:'+id+',percent:'+percent+'}"]';
        $('.loading').show();        myHttp({
            url: urls.getChapterContentByPercent.path,
            headers:{'jd-token':accessToken},

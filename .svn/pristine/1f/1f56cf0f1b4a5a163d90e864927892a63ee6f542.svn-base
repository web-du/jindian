<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no"/>
    <title>钱包</title>
    <link rel="stylesheet" type="text/css" href="../css/ui-box.css"/>
    <link rel="stylesheet" type="text/css" href="../css/base.css"/>
    <link rel="stylesheet" type="text/css" href="../css/style.css"/>
    <style>
        .ui-page {
            background-color: #fff;
        }
    </style>
<script src="../js/public.js"></script> </head>
<body style="background-color:#fff;">
<div date-role="page">
    <div class="myheader">
        <a class="Goback" href="javascript:NATIVE.closeWinView();" data-ajax="false">
            <img src="../images/Goback.png"/>
        </a>
        <h2 class="title">我的钱包</h2>
    </div>
    <div class="myheader-bg">
        <div class="my-money">
            <img src="../images/account-money.png"/>
            <p>账户余额：<em><span id="readCoin">0</span>金元宝</em></p>
        </div>
    </div>
    <div class="wallet-record">
        <div class="box">
            <a href="javascript:locationUrl('recharge_record.html',false);">
                <div class="img">
                    <img src="../images/wallet-img01.png"/>
                    <p>充值记录</p>
                </div>
                <img src="../images/account-To.png"/>
            </a>
        </div>
        <div class="box">
            <a href="javascript:locationUrl('consumption.html',false);">
                <div class="img">
                    <img src="../images/wallet-img02.png"/>
                    <p>消费记录</p>
                </div>
                <img src="../images/account-To.png"/>
            </a>
        </div>
        <button><a href="javascript:locationUrl('refill.html',false)">立即充值</a></button>
    </div>
</div>

<script src="../js/jquery-1.8.3.min.js"></script>

<script src="../js/config.js"></script>
<script>



    if(accessToken){
        getAccountCoin();
    }else{
        NATIVE.toLogin();
    }

    //获取账户余额
    function getAccountCoin(){
        var params = '["{}"]';
        $('.loading').show();        myHttp({
            url: urls.getAccountCoin.path,
            headers:{'jd-token':accessToken},
            params: params,
            success: function (res) { $('.loading').hide();
                if (res.statusCode == 200) {
                    if(res.data){
                        $('#readCoin').text(res.data);
                    }

                } else if(res.statusCode == 110003) {
                    NATIVE.toLogin();
                }
            }
        });
    }





</script>
<script src="../js/public.js"></script> </body>
</html>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no"/>
    <title>安全中心</title>
    <link rel="stylesheet" type="text/css" href="../css/ui-box.css"/>
    <link rel="stylesheet" type="text/css" href="../css/base.css"/>
    <link rel="stylesheet" type="text/css" href="../css/style.css"/>
    <style>
        .ui-page {
            background-color: #fff;
        }

        .account-install-page .details .ui-slider-track .ui-btn.ui-slider-handle {
            background-color: #fff;
            border: none;
        }
    </style>
<script type="text/javascript" src="../js/public.js"></script>
</head>
<body>
<div data-role="page">
    <div class="myheader">
        <a class="Goback" href="javascript:NATIVE.closeWinView();" data-ajax="false">
            <img src="../images/Goback.png"/>
        </a>
        <h2 class="title">安全中心</h2>
    </div>

    <div class="content">
        <div class="personal_data">
            <h2>账号安全</h2>
            <div class="box">
                <div class="your-id">
                    <a href="#">
                        <span>绑定手机号</span>
                        <div class="img">
                            <span class="right">已绑定</span>
                            <img src="../images/account-To.png" class="to">
                        </div>
                    </a>
                </div>
            </div>
            <div class="box">
                <div class="your-mail">
                    <a id="emailBindLink" href="javascript:locationUrl('binding_mail.html',false);">
                        <span>绑定邮箱</span>
                        <div class="img">
                            <span id="emailBind">未绑定</span>
                            <img src="../images/account-To.png" class="to">
                        </div>
                    </a>
                </div>
            </div>
            <div class="box">
                <div class="modify-pwd">
                    <a href="javascript:locationUrl('change_password.html',false);">
                        <span>修改密码</span>
                        <div class="img">
                            <img src="../images/account-To.png" class="to">
                        </div>
                    </a>
                </div>
            </div>
            <!-- <div class="box">
                <div class="Tofind-pwd">
                    <a href="find_pwd.html">
                        <span>找回密码</span>
                        <div class="img">
                            <img src="../images/account-To.png" class="to">
                        </div>
                    </a>
                </div>
            </div> -->
        </div>
    </div>
</div>

<script src="../js/jquery-1.8.3.min.js"></script>
<script src="../js/config.js"></script>

<script>



    if(accessToken){
        getBindState();
    }else{
        NATIVE.toLogin();
    }

    //获取app设置
    function getBindState(){
        var params = '["{}"]';
        $('.loading').show();        myHttp({
            url: urls.getBindState.path,
            headers:{'jd-token':accessToken},
            params: params,
            success: function (res) { $('.loading').hide();
                if (res.statusCode == 200) {
                    if(res.data){
                        var record = res.data;
                        if(record['emailBind']){
                            $('#emailBind').addClass('right').text('已绑定');
                            $('#emailBindLink').attr('href','#');
                        }

                    }
                } else if(res.statusCode == 110003) {
                    NATIVE.toLogin();
                }
            }
        });
    }

</script>
</body>
</html>
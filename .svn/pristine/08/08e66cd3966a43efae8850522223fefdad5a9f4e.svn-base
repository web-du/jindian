<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>全部评论</title>
    <link rel="stylesheet" type="text/css" href="../css/ui-box.css"/>
    <link rel="stylesheet" type="text/css" href="../css/base.css"/>
    <link rel="stylesheet" type="text/css" href="../css/style.css"/>
    <style>
    	.discuss{
    		padding: 0 0.25rem;
    	}
    	.content{
    		margin-bottom: 0.98rem;
    	}
    </style>
<script type="text/javascript" src="../js/public.js"></script>
</head>
<body>
	<div class="myheader">
		<a class="Goback" href="javascript:NATIVE.closeWinView();">
			<img src="../images/Goback.png"/>
		</a>
		<h2 class="title">全部讨论</h2>
	</div>

	<div class="content">
		<div class="discuss">
			<div class="details">
				<div class="any-null">
					<img src="../images/any-null.png" >
				</div>
			</div>
		</div>
	</div>
	<input id="pageid" value="1" type="hidden">
	<!--发表评论-->
	<div class="fix-Todis">
		<input type="text" placeholder="请输入您的评论" id="myComment"/>
		<button type="button" onclick="addComment()">发送</button>
	</div>
	<script src="../js/jquery-1.8.3.min.js"></script>
    <script src="../js/config.js"></script>
	<script>

        var id = getQueryString(winurl,'id');


        //初始加载第一页
		var params = '["{bookId:'+id+',pageSize:10}"]';
        showContent(params);

        window.scrollTo(0, 0); //每次F5刷新把滚动条置顶
        new NeuF.ScrollPage(window, { delay: 1000, marginBottom: 0 }, function (offset) {
            if (offset > 0) {
                var page = $("#pageid").val();
                var next=Number(page)+1;
                $("#pageid").val(next);
                var params = '["{pageNumber:'+next+',pageSize:10,more:true,bookId:'+id+'}"]';
                showContent(params);
            }
        });

        var isLastRecord = false;

		//获取评论内容加载
        function showContent(params,flag){
            if(isLastRecord){
				return false;
			}
            $('.loading').show();
            var options = {
                url: urls.getCommentList.path,
                params: params,
                success: function (res) { $('.loading').hide();
                    if(res.statusCode==200){
                        var detail = res.data.list;
                        if(flag){
                            $('.details').html('');
						}
                        if(detail && detail.length>0){
                            $('.any-null').hide();
                            for(var i in detail){
                                var record = detail[i];
                                var zanimg = "../images/zan.png";
                                var contenthtml = '<div class="box">' +
                                    '    <div class="name">' +
                                    '     <img src="'+record['headerUrl']+'" onerror="this.onerror=\'\';src=\'../images/account-img03.png\'"/>' +
                                    '     <span>'+record['userName']+'</span>' +
                                    '    </div>' +
                                    '    <p>'+record['content']+'</p>' +
                                    '    <div class="time">' +
                                    '     <span>'+record['createTime']+'</span>' +
                                    '     <div class="Todis">';
                                if(record['praiseState']=='1'){
                                    contenthtml +='<div class="zan">' +
                                        '       <img src="../images/zand.png"/>' +
                                        '        <span id="praiseNum_'+record['id']+'">'+record['praiseNum']+'</span>' +
                                        '       </div>';
								}else{
                                    contenthtml +='<div class="zan" onclick="addPraise('+record['id']+',true,this)">' +
                                        '       <img src="../images/zan.png"/>' +
                                        '        <span id="praiseNum_'+record['id']+'">'+record['praiseNum']+'</span>' +
                                        '       </div>';
								}


                                contenthtml+=' <div class="zan">' +
                                    '        <a href="javascript:locationUrl(\'discuss_details.html?commentId='+record['id']+'\',true);">' +
                                    '        <img src="../images/zan2.png"/>' +
                                    '        <span>'+record['replyNum']+'</span>' +
                                    '        </a>' +
                                    '       </div>' +
                                    '      </div>' +
                                    '     </div>' +
                                    '    </div>';
                                $('.details').append(contenthtml);
                            }
                        }else{
                            isLastRecord = true; myAlert('没有更多数据了');
                        }
                    }
                }
            };
            if(accessToken){
                options.headers = {'jd-token':accessToken};
			}

            myHttp(options);

		}

		//点赞
		function addPraise(commentId,state,obj){
            if(!accessToken){
                NATIVE.toLogin();
            }
            var params = '["{commentId:'+commentId+',state:'+state+'}"]';
            $('.loading').show();        myHttp({
                url: urls.addPraise.path,
                headers:{'jd-token':accessToken},
                params: params,
                success: function (res) { $('.loading').hide();
                    if(res.statusCode==200){
						if(state){
                            $(obj).find('img').attr('src','../images/zand.png');
                            $(obj).find('span').text(parseInt($(obj).find('span').text())+1);
                            $(obj).removeAttr("onclick");
                        	myAlert('点赞成功');
						}
                    } else if(res.statusCode == 110003) {
                        NATIVE.toLogin();
                    }else{
                        myAlert(res.statusMsg);
					}
                }
            });

            //点赞效果
            $(this).find("img").attr("src","../images/zand.png");
            $(this).find("span").css("color","#e15149");
		}

		//发表评论
		function addComment(){
			var myComment = $('#myComment').val()
			if(!myComment){
				return false;
			}
            if(!accessToken){
                NATIVE.toLogin();
            }

			var params = '["{bookId:'+id+',content:\''+myComment+'\'}"]';

            $('.loading').show();        myHttp({
                url: urls.addComment.path,
                headers:{'jd-token':accessToken},
                params: params,
                success: function (res) {
                    if(res.statusCode==200){
                        isLastRecord = false;
                        var params = '["{bookId:'+id+',pageSize:10}"]';
                        showContent(params,true);
                        $('#myComment').val('');
                    } else if(res.statusCode == 110003) {
                        NATIVE.toLogin();
                    }else{
                        myAlert(res.statusMsg);
                    }
                }
            });
		}

	</script>
</body>
</html>